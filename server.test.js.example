import request from "supertest";
import mongoose from "mongoose";
import dotenv from "dotenv";
import { fileURLToPath } from "url";
import { dirname, join } from "path";

const __filename = fileURLToPath(import.meta.url);
const __dirname = dirname(__filename);

// Load environment variables
const envPath = join(__dirname, ".env.test");
console.log("Loading .env.test from:", envPath);
dotenv.config({ path: envPath });

// Log environment variables for debugging
console.log("TEST_MONGO_URI:", process.env.TEST_MONGO_URI);
console.log("All env variables:", process.env);

// Import your Express app
import app from "./server.js"; // Make sure this path is correct

beforeAll(async () => {
  if (!process.env.TEST_MONGO_URI) {
    throw new Error("TEST_MONGO_URI is not defined in the environment");
  }
  await mongoose.connect(process.env.TEST_MONGO_URI);
});

afterAll(async () => {
  await mongoose.connection.close();
});

describe("GET /", () => {
  it("should return 200 OK", async () => {
    const response = await request(app).get("/");
    expect(response.status).toBe(200);
  });
});

